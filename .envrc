# Development environment variables

layout python

export DATABASE_URL="sqlite:///./image_definitions.db"
export DEBUG=true
export LOG_LEVEL=debug
export HOST=0.0.0.0
export PORT=8000

# For PostgreSQL (uncomment to use instead of SQLite)
# export DATABASE_URL="postgresql://user:password@localhost/image_definitions"

# Add poetry venv to PATH
if command -v poetry &> /dev/null; then
    export VIRTUAL_ENV=$(poetry env info --path 2>/dev/null)
    if [[ -n "$VIRTUAL_ENV" ]]; then
        export PATH="$VIRTUAL_ENV/bin:$PATH"
    fi
fi
